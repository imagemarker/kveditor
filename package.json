{
  "name": "@imagemarker/kveditor",
  "version": "0.1.1",
  "description": "React key/value UI component library",
  "repository": "github:imagemarker/kveditor",
  "keywords": [
    "react",
    "component",
    "library",
    "key/value",
    "key-value",
    "editor"
  ],
  "types": "types.d.ts",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "browser": "./dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "test": "jest --config=jest.config.js --passWithNoTests",
    "watch": "rollup src/index.ts -cw",
    "build": "yarn clean && NODE_ENV=development rollup -c rollup.config.js",
    "build:prod": "yarn clean && NODE_ENV=production rollup -c rollup.config.js",
    "build:example": "yarn clean && NODE_ENV=development rollup -c rollup.examples.config.js",
    "start": "yarn build:example && serve dist"
  },
  "devDependencies": {
    "@rollup/plugin-html": "^0.2.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@types/jest": "^26.0.14",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-react-hooks": "^4.1.2",
    "jest": "^26.4.2",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.28.2",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^11.3.2",
    "ts-jest": "^26.4.1",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
